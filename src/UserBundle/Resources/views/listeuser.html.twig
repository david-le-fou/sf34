<html>
<head>
{% block stylesheets %}
           <link rel="stylesheet" href="{{ asset('css/style.css') }}">
            <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
{% endblock %}
</head>

<body>
    {% block body %}
        
        <h1>Liste Utilisateur</h1>
        <a href="{{path('add_user')}}" class="btn btn-Success">Ajouter</a>
        <table class="table table-striped">
        <thead>
            <tr>
                <th> id </th>
                <th> Nom </th>
                <th> Login </th>
                <th> Mot de Pass</th>
                <th> adress</th>
                <th>Action</th>
            </tr>
        </thead>
        {% for key in data %}
            <tr>
                <td>{{key.id}}</td>
                <td>{{key.nom}}</td>
                <td>{{key.login}}</td>
                <td>{{key.pass}}</td>
                <td>{{key.adress}}</td>
                <td><a href="{{path('delete_user',{'id':key.id})}}" class="btn btn-Danger">Supprimer</a>
                <a href="{{path('modifier_usr',{'id':key.id})}}" class="btn btn-secondary">Modifier</a></td>
            </tr>
        {% endfor %}
        </table>
    {% endblock %}
</body>
</html>
